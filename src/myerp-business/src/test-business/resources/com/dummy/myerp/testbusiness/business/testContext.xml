<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">


    <!-- ====================   Database   ==================== -->

    <!-- ========== DataSources ========== -->
    <bean id="dataSourceMYERP" class="org.apache.commons.dbcp2.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="${myerp.database.myerp.driverClassName}"/>
        <property name="url" value="${myerp.database.myerp.url}"/>
        <property name="username" value="${myerp.database.myerp.username}"/>
        <property name="password" value="${myerp.database.myerp.password}"/>
        <property name="defaultAutoCommit" value="${myerp.database.myerp.defaultAutoCommit}"/>
        <property name="defaultReadOnly" value="${myerp.database.myerp.defaultReadOnly}"/>
        <property name="defaultTransactionIsolation" value="${myerp.database.myerp.defaultTransactionIsolation}"/>
        <property name="initialSize" value="${myerp.database.myerp.initialSize}"/>
        <property name="maxTotal" value="${myerp.database.myerp.maxTotal}"/>
        <property name="maxIdle" value="${myerp.database.myerp.maxIdle}"/>
        <property name="minIdle" value="${myerp.database.myerp.minIdle}"/>
        <property name="maxWaitMillis" value="${myerp.database.myerp.maxWaitMillis}"/>
    </bean>
</beans>
